<div class="container mt-5">
  <div class="row">
    <h2 style="font-weight:bold"><%= @group.name %>の投稿一覧</h2>
  </div>
  <div class="row">
    <table class="table">
      <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.member.get_profile_image(100,100) %></td>
        <td>
          <%= link_to group_post_path(post.group, post) do %>
            <%= post.member.display_name %>
          <% end %>
        </td>
        <td><%= post.body %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>