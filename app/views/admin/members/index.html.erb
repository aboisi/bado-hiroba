<div class="container">
  <div class="row">
    <div class="col-10 mx-auto mt-5">
      <h2 style="font-weight:bold">会員一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-10 text-center mt-2">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= member.id %></td>
            <td>
              <%= link_to admin_member_path(member) do %>
                <%= member.full_name %>
              <% end %>
            </td>
            <td><%= member.email %></td>
            <td>
              <% if member.is_active %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-danger">退会</span>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @members %>
  </div>
</div>
