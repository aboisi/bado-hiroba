<div class="container mt-5">
  <div class="row">
    <div class="col-5 offset-4">
      <div class="row">
        <h2 class="text-center mb-3" style="font-weight:bold">ログイン</h2>
      </div>
  
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table>
        <tr>
          <td class="pt-3"><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%" %></td>
        </tr>
      
        <tr>
          <td class="pt-3"><%= f.label :password, "パスワード" %></td>
          <td><%= f.password_field :password, autocomplete: "current-password", style: "width: 100%" %></td>
        </tr>
      
        <tr>
          <% if devise_mapping.rememberable? %>
            <td></td>
            <td class="pt-1">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </td>
          <% end %>
        </tr>
        
        <tr>
          <td></td>
          <td class="pt-3">
            <%= f.submit "ログイン", class: 'btn btn-primary btn-lg', style: "width: 80%" %>
          </td>
        </tr>
        </table>
      <% end %>
      
      <div>
        <h5 class="pt-5" style="font-weight:bold">会員登録がお済みでない方</h5>
        <h5><%= render "public/shared/links" %>から新規登録を行なって下さい。</h5>
      </div>
    </div>
  </div>
</div>
