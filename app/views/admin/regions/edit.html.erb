<div class="container mt-5">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <h4 class="table-active text-center " style="font-weight:bold">地域編集</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="mx-auto">
      <table>
        <%= form_with model: @region, url:admin_region_path, method: :patch do |f| %>
        <tr>
          <td>地域名</td>
          <td>
            <%= f.text_field :name %>
          </td>
          <td>
            <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>