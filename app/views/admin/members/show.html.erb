<div class="container">
  <div class="row">
    <div class="col-10 mx-auto mt-5">
      <h2 style="font-weight:bold"><%= @member.last_name %>さんの会員詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mx-auto mt-2">
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @member.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @member.full_name %></td>
        </tr>
        <tr>
          <th>表示名</th>
          <td><%= @member.display_name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @member.email %></td>
        </tr>
          <th>会員ステータス</th>
          <td>
            <% if @member.is_active %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-danger">退会</span>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= link_to "編集する", edit_admin_member_path(@member), class: "btn btn-success" %>
    </div>
  </div>
</div>
