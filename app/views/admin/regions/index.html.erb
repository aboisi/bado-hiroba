<div class="container mt-5">
  <div class="row">
    <div class="col-3 mx-auto">
      <h4 class="table-active text-center" style="font-weight:bold">地域一覧・追加</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-4 mx-auto">
      <%= form_with model: @region, url:admin_regions_path, method: :post do |f| %>
        地域名  <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-sm btn-primary btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-6 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th class="table-active">地域</th>
            <th class="table-active"></th>
          </tr>
        </thead>
        <tbody>
          <% @regions.each do |region| %>
          <tr>
            <td><%= region.name %></td>
            <td align="right"><%= link_to "編集する",edit_admin_region_path(region), method: :get, class: "btn btn-sm btn-primary btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
