<div class="container">
  <div class="row">
    <h2>登録情報</h2>
  </div>
  <div class="row">
    <%= image_tag @member.get_profile_image(100,100) %>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>氏名</th>
        <td><%= @member.last_name %> <%= @member.first_name%></td>
      </tr>
      <tr>
        <th>表示名</th>
        <td><%= @member.display_name %></td>
      <tr>
        <th>メールアドレス</th>
        <td><%= @member.email %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-2 offset-5">
      <%= link_to "編集する", edit_information_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>
  <div class="row">
    <h2>加入グループ・マイポスト</h2>
  </div>
  
  <% @member.groups.each do |group| %>
    <table>
      <tr>
        <td><%= image_tag group.get_group_image(100, 100) %></td>
        <td style="font-size: 25px; font-weight:bold">
          <%= link_to group_path(group.id) do %>
            <%= group.name %>
          <% end %>
        </td>
      </tr>
    </table>
    <table>
      <% group.posts.where(member_id: @member.id).each do |post| %>
        <tr valign="middle">
          <td width="50"></td>
          <td width="80"><%= image_tag post.member.get_profile_image(100, 100) %></td>
          <td width="50">
            <%= link_to group_post_path(post.group, post) do %>
                <%= post.member.display_name %>
            <% end %>
          </td>
          <td width="80" id="favorite_buttons_<%= post.id %>">
            <%= render "public/favorites/favorite", post: post %>
          </td>
          <td width="130" id="comment_counter">
            <%= render "public/post_comments/counter", post: post %>
          </td>
          <td></td>
        </tr>
        <tr>
          <td colspan="2"></td>
          <td colspan="4">
            <%= link_to group_post_path(post.group, post) do %>
                <%= post.body %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
