<% if post.favorited_by?(current_member) %>
  <%= link_to group_post_favorites_path(post.group,post), method: :delete, remote: true do %>
    ♥<%= post.favorites.count %> 
  <% end %>
<% else %>
  <%= link_to group_post_favorites_path(post.group,post), method: :post, remote: true do %>
    ♡<%= post.favorites.count %> 
  <% end %>
<% end %>