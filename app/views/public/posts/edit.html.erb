
<div class="container">
  <div class="row">
    <h2>投稿内容編集</h2>
  </div>
  <div class="row">
    <%= form_with model: @post, url: group_post_path(@post.group,@post) ,method: :PATCH, local: true do |f| %>
      <table class="table">
        <tr>
          <td>
            <%= f.text_area :body, autofocus: true, size: "40x10" %>
          </td>
        </tr>
        <tr>
          <td><%= f.submit "変更内容を保存する", class: "btn btn-success btn-lg" %></td>
          <td><%= link_to "投稿詳細", group_post_path(@post), class: "btn btn-lg btn-primary btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>