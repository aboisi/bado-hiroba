<div class="container mt-5">
  <div class="row">
    <h2 style="font-weight:bold">
      <%= link_to group_path(@group) do %>
        <%= @group.name %>
      <% end %>
      の投稿一覧
    </h2>
  </div>
  <div class="row">
    <table class="table">
      <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.member.get_profile_image(100,100) %></td>
        <td>
          <%= link_to group_post_path(post.group, post) do %>
            <%= post.member.display_name %>
          <% end %>
        </td>
        <td><%= post.body %></td>
        <td>
          <% if post.favorited_by?(current_member) %>
            <p>
              <%= link_to group_post_favorites_path(post.group,post), method: :delete do %>
                <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= post.favorites.count %> いいね
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to group_post_favorites_path(post.group,post), method: :post do %>
                ♡<%= post.favorites.count %> いいね
              <% end %>
            </p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
