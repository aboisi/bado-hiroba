<div class="container">
  <div class="row">
    <h2>会員情報編集</h2>
  </div>
  <div class="row">
    <%= form_with model: @member, url: update_information_path ,method: :PATCH, local: true do |f| %>
      <table class="table">
        <tr>
          <th>プロフィール画像</th>
          <td width="10"></td>
          <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td class="p-1" width="10"><%= f.label :last_name, "(姓)" %></td>
          <td>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          </td>
          <td><%= f.label :first_name, "(名)" %></td>
          <td>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </td>
        </tr>
        <tr>
          <th class="pt-3"><%= f.label :display_name, "表示名" %></th>
          <td width="10"></td>
          <td>
            <%= f.text_field :display_name, autofocus: true, autocomplete: "display_name" %>
          </td>
        <tr>
          <th class="pt-3"><%= f.label :email, "メールアドレス" %></th>
          <td width="10"></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td><%= f.submit "変更内容を保存する", class: "btn btn-success btn-lg" %></td>
          <td></td>
          <td><%= link_to " 退会する", unsubscribe_path, class: "btn btn-danger btn-lg"%></td>
        </tr>
      </table>
    <% end %>  
  </div>
</div>